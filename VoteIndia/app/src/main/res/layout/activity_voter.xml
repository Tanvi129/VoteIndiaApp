<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:padding="30dp"
        android:gravity="center_horizontal"
        android:text="Select A Candidate"
        android:textAlignment="center"
        android:paddingBottom="32dp"
        android:textColor="#FF9800"
        android:textSize="36sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/candidate1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/candidate1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="Arvind Kejriwal"
            android:textColor="#6B8E23"
            android:gravity="center"
            android:textSize="32dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/candidate2">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/candidate2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="Narendra Modi"
            android:textColor="#6B8E23"
            android:gravity="center"
            android:textSize="32dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/candidate3">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/candidate3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="Rahul Gandhi"
            android:textColor="#6B8E23"
            android:gravity="center"
            android:textSize="32dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/candidate4">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/candidate4"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="Akhilesh Yadav"
            android:textColor="#6B8E23"
            android:gravity="center"
            android:textSize="32dp"/>



    </LinearLayout>


</LinearLayout>